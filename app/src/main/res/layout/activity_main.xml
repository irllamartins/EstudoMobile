<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageAll"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_infinity"
            android:layout_weight="1"
            app:tint="@color/white"/>
        <ImageView
            android:id="@+id/imageHappy"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_happy"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:tint="@color/white"/>
        <ImageView
            android:id="@+id/imageMorning"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_sunny"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:tint="@color/white"/>

    </LinearLayout>
    <TextView
        android:id="@+id/textName"
        android:layout_below="@id/linearMenu"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_margin="32dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="Frase!"
        android:textSize="22dp" />
    <View
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:layout_below="@id/textPhrase"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNewPhrase"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:text="@string/NewPhrase"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:background="@drawable/ripple_button"

        />
</RelativeLayout>